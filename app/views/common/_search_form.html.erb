<%= form_with url: search_redirect_path, method: :get, class: 'search-form form-inline my-2 my-lg-0' do |form| %>
  <div class="form-group">
    <%= form.text_field :search, class: 'form-control ', placeholder: 'Search'%>
  </div>

  <div class="form-group">
    <%= form.select :category, options_for_select(['People', 'Films', 'Species']), { }, { class: 'form-control mr-sm-2 mx-2'} %>
  </div>

  <%= form.submit 'Search', class: 'btn btn-primary my-2 my-sm-0' %>
<% end %>
